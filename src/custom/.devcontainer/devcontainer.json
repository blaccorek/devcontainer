{
    "image": "mcr.microsoft.com/devcontainers/base:${templateOption:imageTag}",
    "features": {
        "ghcr.io/devcontainers/features/docker-in-docker:2": {},
        "ghcr.io/devcontainer-community/devcontainer-features/chezmoi.io:1": {},
        "ghcr.io/meaningful-ooo/devcontainer-features/fish:2": {},
        "ghcr.io/devcontainers-extra/features/starship": {}
    },
    "onCreateCommand": "chezmoi init --branch ${templateOption:dotfilesBranch} ${templateOption:dotfiles} && chezmoi apply",
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "fish"
            }
        }
    }
}